<h1>Add a Recipe to <%= @category.name %></h1>

<%= simple_form_for [@category, @bookmark] do |f| %>
  <%= f.association :recipe, collection: Recipe.all, label: "Select Recipe" %>
  <%= f.input :comment %>
  <%= f.button :submit, 'Add Recipe' %>
<% end %>

<%= link_to 'Back to Category', category_path(@category) %> |
<%= link_to 'Home', root_path %>
