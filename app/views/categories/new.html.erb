<h1>New Category</h1>

<div class="form-new">
  <%= simple_form_for @category do |f| %>
    <div class="form-group">
      <%= f.input :name, label: "Category Name" %>
      <%= f.input :photo, as: :file, label: "Upload Image" %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, 'Create Category', class: 'btn btn-primary' %>
      <%= link_to 'Back', categories_path, class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>
