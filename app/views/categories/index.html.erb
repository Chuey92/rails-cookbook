<h1>All Categories</h1>

<ul>
  <% @categories.each do |category| %>
    <li><%= link_to category.name, category_path(category) %> | <%= link_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure?' } %></li>
  <% end %>
</ul>

